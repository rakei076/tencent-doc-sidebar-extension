{
  "manifest_version": 3,
  "name": "腾讯文档侧边栏",
  "version": "1.0",
  "description": "在浏览器侧边栏打开腾讯文档/飞书文档",
  "minimum_chrome_version": "114",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.feishu.cn/*",
    "*://*.qq.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 